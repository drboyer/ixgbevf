{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-6d1c2007",
    "instance_type": "m4.xlarge",
    "ssh_username": "centos",
		"ssh_pty" : true,
		"enhanced_networking": "true",
    "ami_name": "CentOS 7 Enhanced Networking (ixgbevf 2.16.4) {{timestamp}}"
  }],
	"provisioners": [{
	"type": "shell",
	"inline": [
			"sleep 30",
		  "sudo yum update",
		  "sudo yum install -y wget gcc kernel-devel",
		  "sudo reboot",
		  "wget -O /tmp/tar.gz https://raw.githubusercontent.com/gisjedi/ixgbevf/master/driver_source/ixgbevf-2.16.4.tar.gz",
		  "cd /tmp",
		  "tar xvf tar.gz",
		  "cd ixgbevf-2.16.4/src",
		  "./configure",
		  "make",
		  "sudo make install",
		  "sudo yum remove -y wget gcc kernel-devel",
		  "sudo yum clean all",
			"sudo sed -i '/^GRUB\\_CMDLINE\\_LINUX/s/\"$/\\ net\\.ifnames\\=0\"/' /etc/default/grub",
			"sudo grub2-mkconfig -o /boot/grub2/grub.cfg"
		]
	}]
}